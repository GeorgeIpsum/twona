{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    ".env"
  ],
  "globalEnv": [
    "DATABASE_URL",
    "NODE_ENV",
    "PACKAGE_VERSION"
  ],
  "globalPassThroughEnv": [
    "NODE_ENV"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "db#generate": {
      "cache": true,
      "persistent": false,
      "env": ["DATABASE_URL"],
      "interactive": false
    },
    "db#migrate": {
      "cache": false,
      "persistent": false,
      "env": ["DATABASE_URL"],
      "interactive": true,
      "dependsOn": ["db#generate"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["db#migrate"]
    },
    "bluefin#dev": {
      "dependsOn": ["db#migrate"]
    }
  }
}
