{
  "extends": "@twona/typescript-config/node.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "outDir": "./dist" /* Specify an output folder for all emitted files. */,
    /* Interop Constraints */
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "src",
    "prisma",
    "*.d.ts",
    "*.d.ts",
   ],
  "exclude": [
    "*.config.mjs",
    "node_modules",
    "dist",
    "turbo"
  ]
}
