{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node ESM",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowArbitraryExtensions": true,
    "forceConsistentCasingInFileNames": true,
  }
}
